@model IEnumerable<DAL.Models.Hospital>

@{
    ViewBag.Title = "Hospitals";
}

<h2>Hospitals</h2>

<p>
    @Html.ActionLink("Create New", "CreateHospital")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodBank_Id)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BloodBank_Id)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditHospital", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteHospital", new { id=item.Id })
        </td>
    </tr>
}

</table>
