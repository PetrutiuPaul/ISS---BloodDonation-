@model IEnumerable<DAL.Models.Donation>

@{
    ViewBag.Title = "Donations";
}

<h2>Donations</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Stage
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.Succesfull == Common.Enums.Stage.Pending))
    {
        <tr>
            <td>
                @(item.User.FirstName + " " + item.User.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Succesfull)
            </td>
            <td>
                <button type="button" class="btn btn-success btn-sm">
                    @Html.ActionLink("Next Phase", "FirstAnalyse", new { id = item.Id }, new { @style = "color:white" })
                </button>
                <button type="button" class="btn btn-danger btn-sm">
                    @Html.ActionLink("Cancel", "CancelAnalyse", new { id = item.Id }, new { @style = "color:white" })
                </button>
            </td>
        </tr>
    }

</table>

