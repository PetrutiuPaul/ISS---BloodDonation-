@using Microsoft.AspNet.Identity

<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style>
    .modal-footer, .modal-header {
        background-color: #5cb85c;
        color: white !important;
    }

    .close:hover {
        color: red;
    }

    .close {
        font-size: xx-large;
        color: white;
    }

    .btn.btn-success.btn-lg {
        width: 35%;
        height: 30%;
        display: inline-block;
    }
    .btn.btn-default.btn-lg {
        background: darkred;
        color: black;
        font-size: 40px;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
    .btn.btn-default.btn-lg:hover{
        color:whitesmoke;
    }
    .modal-backdrop {
        opacity: 0.7 !important;
    }
    .modal-lg {
        width: 50%;
        margin-top:20%;
    }

    .modal1 {
        font-size: large;
    }
</style>


<div class="container">
   
    <button type="button" class="btn btn-default btn-lg" id="myBtn">Doneaza</button>
    
    <div class="modal fade" id="myModal" role="dialog">

        <div class="modal-dialog modal-lg">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body" style="padding-top:50px;padding-bottom:50px">
                    <div class="modal1">

                        <button class="btn btn-success btn-lg" style="margin-right:7.5%" onclick="location.href='@Url.Action("Login", "Account")'">
                            <span class="glyphicon glyphicon-log-in"></span> Login
                        </button>

                        <button class="btn btn-success btn-lg" style="margin-left:7.5%" onclick="location.href='@Url.Action("Register", "Account")'">
                            <span class="glyphicon glyphicon-registration-mark"></span> Register
                        </button>

                    </div>
                </div>

                <div class="modal-footer"></div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModalAut" role="dialog">

        <div class="modal-dialog modal-lg">

            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body" style="padding-top:50px;padding-bottom:50px">
                    <div class="modal1">
                        Donatorul de sânge este orice cetăţean român cu domiciliul în România sau orice cetăţean al Uniunii Europene
                        care are reşedinţa în România, în deplină stare de sănătate, care se supune regulilor prelevării de sânge
                        total şi componente sanguine de origine umană.
                    </div>
                </div>

                <div class="modal-footer"></div>
            </div>
        </div>
    </div>
</div>



@if (Request.IsAuthenticated)
{
    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModalAut").modal();
            });
        });
    </script>
}
else
{
    <script>
        $(document).ready(function () {
            $("#myBtn").click(function () {
                $("#myModal").modal();
            });
        });
    </script>
}

